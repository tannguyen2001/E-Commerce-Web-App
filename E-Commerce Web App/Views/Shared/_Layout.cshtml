<!DOCTYPE HTML>
<html>
<head>
    <title>Stellar Clothing E-Commerce</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/owl.carousel.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-3.1.1.min.js"></script>
    @RenderSection("extras", false)
    <script src="~/js/imagezoom.js"></script>
    <script defer src="~/js/jquery.flexslider.js"></script>
    <link rel="stylesheet" href="~/css/flexslider.css" type="text/css" media="screen" />
</head>

<body>
    <!--header-->
    <div class="header">
        <div class="header-top">
            <div class="container">
                <div class="account_info">
                    @if (User.IsInRole("Administrator"))
                    {
                        <p>Logged in as admin &nbsp&nbsp&nbsp<a style="color:white" href="AdminPanel/adminpanel.php">Click here to open Admin Panel</a></p>
                    }
                </div>
                <div class="top-right">
                    <ul>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li><a asp-action="Login" asp-controller="Home">login</a></li>
                        }
                        else
                        {
                            <li><a asp-action="Logout" asp-controller="Home">logout</a></li>
                            <li>
                                <div class="cart box_1">
                                    @await Component.InvokeAsync("TotalPrice")
                                    <div class="clearfix">
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="header-bottom">
            <div class="container">
                <!--/.content-->
                <div id="glavnimeni" class="content white">
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <h1 class="navbar-brand">
                                <a asp-action="Index" asp-controller="Home">Stellar Clothing</a>
                            </h1>
                        </div>
                        <!--/.navbar-header-->

                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                           @await Component.InvokeAsync("HeadingMenu")

                        </div>
                        <!--/.navbar-collapse-->
                    </nav>
                    <!--/.navbar-->
                </div>
            </div>
        </div>
    </div>
    <!--header-->
    @RenderBody()
    @await Component.InvokeAsync("FooterMenu")


    @RenderSection("scripts",false)

    <script src="~/js/templatescript.js"></script>
    </body>
 </html>
