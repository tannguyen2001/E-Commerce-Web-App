@model HeadingMenuViewModel

<ul class="nav navbar-nav">
    @foreach (var item in Model.Items)
    {
        if (!item.HasChildren)
        {
            <li><a href="/@item.Link">@item.Name</a></li>
        }
        else
        {
            <li class="dropdown">
                <a href="/@item.Link" class="dropdown-toggle parent" data-toggle="dropdown">@item.Name<b class="caret"></b></a>
                <ul class="dropdown-menu multi-column columns-3 children">
                    <div class="row">
                        @for (int index = 1; index <= Model.Count; index++)
                        {
                        <div class="col-sm-4">
                            <ul class="multi-column-dropdown">
                                @foreach (var i in item.Children)
                                {
                                    if (i.Item_Column == index)
                                    {
                                    <li><a class="list1" href="/@i.Link">@i.Name</a></li>
                                    }
                                }
                            </ul>
                        </div>
                        }
                    </div>
                </ul>
            </li>
        }
    }
</ul>