@model IEnumerable<E_Commerce_Web_App.Models.Poll>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                Options
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-controller="Options" asp-action="Index">View</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Poll_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Poll_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Poll_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
